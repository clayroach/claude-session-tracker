{
  "name": "claude-session-tracker",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-platform Claude Code session monitoring with Effect-TS",
  "author": "croach",
  "license": "MIT",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "bun run typecheck && electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "bun test tests/unit && playwright test",
    "test:unit": "bun test tests/unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rm -rf dist node_modules/.vite",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "package:win": "electron-builder --win"
  },
  "dependencies": {
    "@effect-atom/atom": "latest",
    "@effect-atom/atom-react": "latest",
    "@effect-rx/rx": "latest",
    "@effect-rx/rx-react": "latest",
    "@effect/ai": "latest",
    "@effect/ai-anthropic": "latest",
    "@effect/ai-openai": "latest",
    "@effect/platform": "latest",
    "@effect/platform-node": "latest",
    "effect": "latest",
    "keytar": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@effect/language-service": "latest",
    "@playwright/test": "^1.49.0",
    "@types/bun": "latest",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.17.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
